{
  "name": "a-l2d",
  "version": "1.0.0-alpha.1",
  "author": "@noonworks",
  "license": "MIT",
  "description": "",
  "private": true,
  "main": "dist/a-l2d-lib.js",
  "types": "dist/type/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noonworks/a-l2d.git"
  },
  "homepage": "https://github.com/noonworks/a-l2d#readme",
  "scripts": {
    "build": "webpack --mode production",
    "dist": "run-s build _build:lib _copy _doc",
    "test": "jest --coverage",
    "clean": "rimraf dist",
    "serve": "superstatic docs",
    "_build:dev": "webpack --mode development",
    "_build:lib": "webpack --mode production --env.lib",
    "_copy": "cpx docs/js/a-l2d.js dist/",
    "_doc": "typedoc src",
    "_precommit": "lint-staged"
  },
  "devDependencies": {
    "@types/aframe": "^0.8.3",
    "@types/jest": "^24.0.18",
    "@types/three": "^0.103.2",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "cpx": "^1.5.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.1",
    "npm-run-all": "^4.1.5",
    "pixi.js": "^5.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "superstatic": "^6.0.4",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run _precommit"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.spec.ts"
    ]
  }
}
