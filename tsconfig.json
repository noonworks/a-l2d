{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "es2015",
    "lib": ["es2019", "dom"],
    "sourceMap": false,
    /* Strict Type-Checking Options */
    "strict": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "typedocOptions": {
    "mode": "file",
    "out": "docs/develop",
    "theme": "minimal",
    "readme": "none",
    "includeDeclarations": false,
    "ignoreCompilerErrors": true,
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "exclude": ["**/__tests__/**/*"]
  }
}
